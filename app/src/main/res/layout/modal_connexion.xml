<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/guideline_modal_accueilRight"
        app:layout_constraintStart_toEndOf="@id/guideline_modal_accueilLeft"
        app:layout_constraintTop_toBottomOf="@id/guideline_modal_accueilUp"
        app:layout_constraintBottom_toTopOf="@id/guideline_modal_accueilDown"

        >

        <TextView
            android:id="@+id/text_champ_utilisateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_accueil" />


        <EditText
            android:id="@+id/champ_nom_utilisateur"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="A mettre en BDD en V2"
            android:inputType="text" />

        <Button
            android:id="@+id/bouton_valider_modal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bouton_valider" />


    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_modal_accueilLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_modal_accueilRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_modal_accueilUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_modal_accueilDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>